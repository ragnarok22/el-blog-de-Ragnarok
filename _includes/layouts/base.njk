<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/tailwind.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="icon" href="{{ '/img/logo.png' | url }}">
  </head>
  <body class="flex justify-center font-sans text-lg min-h-screen">
    <div class="page">
      <header class="flex mt-5 justify-center">
          <div class="brand-img mr-3">
              <img src="/img/logo.png" alt="logo" width="50px" height="50px">
          </div>
          <div class="brand-name">
              <h1 class="brand-title text-4xl font-semibold"><a href="{{ '/' | url }}">Blog de Ragnarok</a></h1>
              <div class="brand-topics">
              {% for tag in collections.tagList %}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" class="topic-item text-sm">{{ tag }}</a>
                <i>|</i>
              {% endfor %}
              </div>
          </div>
      </header>

      {% block content%}
          {{ content | safe }}
      {% endblock content %}

      <footer class="footer mt-auto text-center mb-8">
          Creado por <a href="http://twitter.com/RagnarokReinier" target="_blank" class="underline text-green-700">@Ragnarok22</a> | <a href="/about" class="underline">Sobre mi</a>
      </footer>
  </div>
</body>

</html>