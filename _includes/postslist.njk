<div class="post-list">
  {% for post in postslist | reverse %}
    <div class="post-item flex justify-between mb-8">
      <div class="post-content">
        <h4 class="post-title">
          <a href="{{ post.url | url }}" class="underline">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
        </h4>
        {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="bg-gray-400 text-white p-1 text-sm">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>
      <time class="postlist-date text-gray-600" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    </div>
  {% endfor %}
  </div>
  